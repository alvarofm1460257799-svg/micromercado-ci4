{
    "name": "micromercado/ci4",
    "description": "Sistema CodeIgniter 4 listo para Railway",
    "require": {
        "php": "^8.0",
        "codeigniter4/framework": "^4",
        "phpoffice/phpspreadsheet": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "scripts": {
        "start": "php -S 0.0.0.0:$PORT -t public"
    }
}
